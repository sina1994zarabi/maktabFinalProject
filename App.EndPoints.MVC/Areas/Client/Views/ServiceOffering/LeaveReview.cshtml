@model App.Domain.Core.DTOs.ReviewDto.CreateReviewDto

@{
    ViewData["Title"] = "Leave a Review";
    Layout = "_Layout";
}

<h2 class="mb-4">ارسال نظر برای کارشناس #@ViewBag.ExpertName</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <form method="post" asp-action="SubmitReview" >
            <div class="form-group">
                <label for="rating">امتیاز</label>
                <select class="form-control" id="rating" name="Rating">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
            <div class="form-group">
                <label for="comment">نظر</label>
                <textarea class="form-control" id="comment" name="Comment" rows="3"></textarea>
            </div>
            <input type="hidden" name="ServiceOfferingId" value="@ViewBag.ServiceOfferingId" />
            <input type="hidden" name="ClientId" value="@ViewBag.ClientId" />
            <button type="submit" class="btn btn-primary mt-3">ارسال</button>
        </form>
    </div>
</div>

<!-- Custom Styles -->
<style>
    .card {
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 1.5rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }
</style>
