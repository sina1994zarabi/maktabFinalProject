<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
    <!-- Meta Data -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

    <!-- Favicon -->

    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.png">

    <!-- Custom CSS -->
    <link href="~/ClientPanel/assets/css/styles.css" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="~/ClientPanel/calendar-dist/jalalidatepicker.min.css" />
    <script type="text/javascript" src="~/ClientPanel/calendar-dist/jalalidatepicker.min.js"></script>
</head>

<body dir="rtl">

    <!-- Preloader - style you can find in spinners.css -->
    <div class="preloader"></div>

    <div id="main-wrapper">

        <!-- Top header  -->
        <div class="header header-light dark-text">
            <div class="container">
                <nav id="navigation" class="navigation navigation-landscape">
                    <div class="nav-header">
                        <a class="nav-brand" asp-action = "Index" asp-area="">
                            <img src="~/assets/img/logo.jpg" style="height:43px" />
                        </a>
                    </div>
                </nav>
            </div>
        </div>

        <div class="goodup-dashboard-wrap gray px-4 py-5">
            <a class="mobNavigation" data-bs-toggle="collapse" href="#MobNav" role="button" aria-expanded="false" aria-controls="MobNav">
                <i class="fas fa-bars ms-2"></i>منو
            </a>
            <div class="collapse" id="MobNav">
                <div class="goodup-dashboard-nav sticky-top">
                    <div class="goodup-dashboard-inner">
                        <ul data-submenu-title="منو">
                            <li><a asp-action = "Index"><i class="lni lni-dashboard ms-2"></i>داشبورد</a></li>
                            <li><a asp-controller = "ServiceRequest" asp-action = "ViewServiceRequests"><i class="lni lni-files ms-2"></i>سفارشات من</a></li>
                            <li><a asp-controller = "ServiceOffering" asp-action = "ViewCompletedOffers" ><i class="lni lni-add-files ms-2"></i> سفارشات انجام شده</a></li>
                        </ul>
                        <ul data-submenu-title="حساب کاربری">
                            <li><a asp-controller = "Dashboard" asp-action="ViewProfile"><i class="lni lni-user ms-2"></i>مشاهده پروفایل </a></li>
                            <li><a asp-controller = "Dashboard" asp-action = "EditProfile" ><i class="lni lni-user ms-2"></i>ویرایش پروفایل </a></li>
                            <li><a asp-controller = "Dashboard" asp-action = "UpdateBalance"><i class="lni lni-user ms-2"></i>افزایش موجودی </a></li>
                            <li>
                                <form class="form-inline" asp-area="Account" asp-controller = "Account" asp-action = "LogOut" >
                                    <button type="submit" class="nav-link btn btn-link text-dark">خروج<i class="bx bx-power-off me-2"></i></button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="goodup-dashboard-content">
                <div class="dashboard-widg-bar d-block">
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>

        <footer class="light-footer skin-light-footer style-2">
            <div class="footer-bottom br-top">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-12 col-md-12 text-center">
                            <p class="mb-0">© خدمات منزل</p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

        <a id="tops-button" class="top-scroll" title="Back to top" href="#">
            <i class="ti-arrow-up"></i>
        </a>

    </div>


    <script src="~/ClientPanel/assets/js/jquery.min.js"></script>
    <script src="~/ClientPanel/assets/js/popper.min.js"></script>
    <script src="~/ClientPanel/assets/js/bootstrap.min.js"></script>
    <script src="~/ClientPanel/assets/js/slick.js"></script>
    <script src="~/ClientPanel/assets/js/jquery.magnific-popup.min.js"></script>
    <script src="~/ClientPanel/assets/js/dropzone.js"></script>
    <script src="~/ClientPanel/assets/js/counterup.js"></script>
    <script src="~/ClientPanel/assets/js/lightbox.js"></script>
    <script src="~/ClientPanel/assets/js/moment.min.js"></script>
    <script src="~/ClientPanel/assets/js/daterangepicker.js"></script>
    <script src="~/ClientPanel/assets/js/lightbox.js"></script>
    <script src="~/ClientPanel/assets/js/jQuery.style.switcher.js"></script>
    <script src="~/ClientPanel/assets/js/custom.js"></script>
		

    <script src="~/ClientPanel/assets/js/plugins/raphael/raphael.min.js"></script>
    <script src="~/ClientPanel/assets/js/plugins/morris.js/morris.min.js"></script>
		



    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>