@model App.Domain.Core.DTOs.ExpertDto.UpdateExpertDto
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "_Layout";
}

<h2>ویرایش پروفایل</h2>

<div class="card">
    <div class="card-header text-center">
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" alt="Profile Picture" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" />
        }
        else
        {
            <img src="~/Uploads/GenderNuetralLogo.jpg" alt="Profile Picture" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" />
        }
    </div>
    <div class="card-body">
        <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="hidden" id="AppUserId" asp-for="AppUserId">
            </div>
            <div class="form-group">
                <input type="hidden" id="AppUserId" asp-for="Id">
            </div>
            <div class="form-group mb-3">
                <label asp-for="FullName" class="form-label">نام</label>
                <input asp-for="FullName" class="form-control" value="@Model.FullName" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">ایمیل</label>
                <input asp-for="Email" class="form-control" value="@Model.Email" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">نام کاربری</label>
                <input asp-for="Username" class="form-control" value="@Model.Username" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="form-label">شماره تماس</label>
                <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
            </div>
            <div class="form-group mb-3">
                <label class="form-label">عکس پروفایل</label>
                <input asp-for="Image" class="form-control" type="file" />
            </div>
            <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
        </form>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary"> بازگشت </a>
