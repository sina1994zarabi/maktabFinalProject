@model List<App.Domain.Core.Entities.Services.ServiceOffering>
@using FrameWork;

@{
    Layout = "_Layout";
    ViewData["Title"] = "Service offerings";
}


<h2 class="mb-4">پیشنهادات من</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>توضیحات</th>
            <th>وضعیت</th>
            <th>تاریخ ایجاد</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var offer in Model)
        {
            <tr>
                <td>@offer.Description</td>
                <td>@offer.Status.ToFarsiStatus()</td>
                <td>@offer.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                <td>
                    <a asp-action = "Edit" asp-route-id = "@offer.Id" class="btn btn-info btn-sm"> ویرایش</a>
                    <a asp-action = "Details" asp-route-id = "@offer.Id" class="btn btn-Primary btn-sm"> مشاهده جزییات</a>
                    <a asp-action = "Delete" asp-route-id = "@offer.Id" class="btn btn-danger btn-sm">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
