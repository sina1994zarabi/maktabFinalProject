@using App.Domain.Core.Enums;
@model App.Domain.Core.DTOs.AccountDto.AccountRegisterDto;

@{
    ViewData["Title"] = "Create Client";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>ایجاد مشتری جدید</h2>
<div asp-validation-summary = "All" class = "text-danger"></div>
<form asp-action = "CreateClient"  method = "post">
    <div class="form-group">
        <label asp-for = "FullName">نام و نام خانوادگی </label>
        <input asp-for = "FullName" class="form-control" />
        <span asp-validation-for = "FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for = "Username">نام کاربری </label>
        <input asp-for = "Username" class="form-control" />
        <span asp-validation-for = "Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for = "Email">آدرس ایمیل </label>
        <input asp-for = "Email" class = "form-control" />
        <span asp-validation-for = "Email" class = "text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for = "Password">رمز عبور </label>
        <input asp-for = "Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="col-6">
        <div class="form-group">
            <label asp-for="ConfirmedPassword" class="mb-1"> تکرار رمز عبور </label>
            <input type="password" asp-for="ConfirmedPassword" class="form-control rounded">
            <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"> شماره تلفن </label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
            <label asp-for = "Gender" class="mb-1"> جنسیت</label>
            <select class = "form-control rounded" asp-for = "Gender">
                <option value = "@Gender.female"> خانوم</option>
                <option value = "@Gender.male"> آقا</option>
            </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-success">ایجاد</button>
    <a asp-action="Clients" class="btn btn-secondary">بازگشت</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
