@model List<App.Domain.Core.Entities.Services.Category>


@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<!-- Hero Section -->
<div class="hero-section py-5 mb-4" style="background: linear-gradient(rgba(40,167,69,0.8), rgba(33,136,56,0.6));
                                               background-size: cover;
                                               background-position: center;
                                               clip-path: polygon(0 0, 100% 0, 100% 90%, 50% 100%, 0 90%);">
    <div class="container text-center text-white py-5">
        <h1 class="display-4 mb-4">راحت انجام می شه</h1>
        <p class="lead mb-4">جستجوی خدمات مورد نظر</p>
        <div class="search-container mx-auto" style="max-width: 600px;">
            <div class="input-group">
                <input type="text" class="form-control form-control-lg" placeholder="دنبال چه می گردید؟">
                <button class="btn btn-lg btn-light" type="button">جستجو</button>
            </div>
        </div>
    </div>
</div>
 
<!-- Categories Section -->
<div class="container mb-5">
    <h2 class="text-center mb-3">دسته بندی ها</h2>
    <div class="row">
        @foreach (var cat in Model)
        {
            <div class="col-6 col-md-3 mb-2 d-flex justify-content-center">
                <div class="card category-card small-card text-center">
                    <div class="card-body p-1">
                        <img src = "@cat.Image" class = "img-fluid mb-1 category-logo" alt = "@cat.Title" />
                        <h6 class = "card-title m-0">@cat.Title</h6>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<!-- Call-to-Action Section -->
<div class="bg-light py-5">
    <div class="container text-center">
        <h2>آیا تا به حال عضو نشده اید؟?</h2>
        <a asp-area = "Account" asp-controller = "Account" asp-action = "Register" class="btn btn-primary btn-lg mt-3">همین حالا ثبت کنید</a>
    </div>
</div>

<style>
    .small-card {
        max-width: 120px; /* Adjust width as needed */
        margin: 0 auto;
    }

    .category-logo {
        max-height: 60px;
        object-fit: contain;
        margin: 0 auto;
        display: block;
    }

    .category-card .card-body {
        padding: 4px; /* Reduced padding for a tighter look */
    }

    .category-card .card-title {
        font-size: 0.9rem;
        margin: 0;
    }


</style>


