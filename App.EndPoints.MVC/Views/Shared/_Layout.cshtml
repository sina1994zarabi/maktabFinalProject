<!DOCTYPE html>
<html lang="fa">

<head>
    <!-- Meta Data -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/ClientPanel/images.png">

    <!-- Custom CSS -->
    <link href="~/ClientPanel/assets/css/styles.css" rel="stylesheet">

    <link type="text/css" rel="stylesheet" href="~/ClientPanel/calendar-dist/jalalidatepicker.min.css" />
    <script type="text/javascript" src="~/ClientPanel/calendar-dist/jalalidatepicker.min.js"></script>
</head>

<body dir="rtl">

    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div class="preloader"></div>

    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <div id="main-wrapper">

        <!-- ============================================================== -->
        <!-- Top header  -->
        <!-- ============================================================== -->
        <!-- Start Navigation -->
        <div class="header header-light dark-text">
            <div class="container">
                <nav id="navigation" class="navigation navigation-landscape">
                    <div class="nav-header">
                        <a class="nav-brand" href="#">
                            <img src = "~/ClientPanel//images.png" class="logo" alt="" style="width: 50px; height: auto;" />
                        </a>
                    </div>
                    <div class="nav-menus-wrapper" style="transition-property: none;">
                        <ul class="nav-menu">

                            <li class="active">
                                <a href="javascript:void(0);">صفحه اصلی</a>
                                <ul class="nav-dropdown nav-submenu">
                                    <li><a asp-action = "Index">صفحه اصلی</a></li>
                                    <li><a asp-action = "Categories" > دسته بندی ها</a></li>
                                    <li><a asp-controller  = "Services" asp-action = "Index" > خدمات</a></li>
                                </ul>
                            </li>
                            <partial name="_LoginPartial" />
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- End Navigation -->
    <div class="clearfix"></div>
    <!-- ============================================================== -->
    <!-- Top header  -->
    <!-- ============================================================== -->
    @RenderBody();
    <!-- ======================= All Types Listing ======================== -->
    <!-- ============================ Footer Start ================================== -->
    <footer class="light-footer skin-light-footer style-2">
        <div class="footer-bottom br-top">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-12 col-md-12 text-center">
                        <p class="mb-0">© خدمات منزل</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- ============================ Footer End ================================== -->


    <a id="tops-button" class="top-scroll" title="Back to top" href="#">
        <i class="ti-arrow-up"></i>
    </a>

   
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- All Jquery -->
    <!-- ============================================================== -->
    <script src="~/ClientPanel/assets/js/jquery.min.js"></script>
    <script src="~/ClientPanel/assets/js/popper.min.js"></script>
    <script src="~/ClientPanel/assets/js/bootstrap.min.js"></script>
    <script src="~/ClientPanel/assets/js/slick.js"></script>
    <script src="~/ClientPanel/assets/js/jquery.magnific-popup.min.js"></script>
    <script src="~/ClientPanel/assets/js/dropzone.js"></script>
    <script src="~/ClientPanel/assets/js/counterup.js"></script>
    <script src="~/ClientPanel/assets/js/lightbox.js"></script>
    <script src="~/ClientPanel/assets/js/moment.min.js"></script>
    <script src="~/ClientPanel/assets/js/daterangepicker.js"></script>
    <script src="~/ClientPanel/assets/js/lightbox.js"></script>
    <script src="~/ClientPanel/assets/js/jQuery.style.switcher.js"></script>
    <script src="~/ClientPanel/assets/js/custom.js"></script>
    <!-- ============================================================== -->
    <!-- This page plugins -->
    <!-- ============================================================== -->

</body>


@await RenderSectionAsync("Scripts", required: false)
</html>